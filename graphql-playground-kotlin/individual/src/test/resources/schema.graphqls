type Query {
    bookById(id: ID): Book
}

directive @fetch(from: String!) on FIELD_DEFINITION

type Book {
    id: ID
    name: String
    title: String @fetch(from:"name")
    pageCount: Int
    author: Author,
    company: Company,
    publishedAt(dateFormat : String = "dd, MMM, yyyy"): String
}

type Author {
    id: ID
    firstName: String
    lastName: String
}

type Company {
    name: String
    address: String
}
